# Docker Environment Configuration for CEE Pipeline
# Copy this to .env and fill in your actual values

# =============================================================================
# LLM API KEYS (REQUIRED - Add at least one)
# =============================================================================
OPENAI_API_KEY=your_openai_api_key_here
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
# PostgreSQL password (change this for production!)
POSTGRES_PASSWORD=cee_secure_password_change_me

# Database URL (automatically configured for Docker)
# DATABASE_URL=postgresql://cee_user:${POSTGRES_PASSWORD}@postgres:5432/cee_pipeline

# =============================================================================
# REDIS CONFIGURATION
# =============================================================================
# REDIS_URL=redis://redis:6379/0

# =============================================================================
# TRUST SCORE WEIGHTS (must sum to 1.0)
# =============================================================================
TIER_1_WEIGHT=0.25
TIER_2_WEIGHT=0.55
TIER_3_WEIGHT=0.20

# =============================================================================
# DRIFT MONITORING
# =============================================================================
DRIFT_THRESHOLD_ABSOLUTE=5.0
DRIFT_THRESHOLD_RELATIVE=0.10

# =============================================================================
# HUMAN REVIEW SETTINGS
# =============================================================================
TIER_3_SAMPLING_RATE=0.20

# =============================================================================
# APPLICATION SETTINGS
# =============================================================================
# API Host and Port (for local development override)
# API_HOST=0.0.0.0
# API_PORT=8000

# Log level (DEBUG, INFO, WARNING, ERROR, CRITICAL)
LOG_LEVEL=INFO

# Enable/disable features
ENABLE_DRIFT_MONITORING=true
ENABLE_AUTO_REVIEW_QUEUE=true
